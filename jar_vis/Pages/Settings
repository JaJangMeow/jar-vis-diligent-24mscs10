
import React, { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
import { Label } from "@/components/ui/label";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/components/ui/select";
import { Button } from "@/components/ui/button";
import { Settings as SettingsIcon, Sparkles, Save } from "lucide-react";
import { Alert, AlertDescription } from "@/components/ui/alert";

export default function Settings() {
  const [saved, setSaved] = useState(false);
  const queryClient = useQueryClient();

  const { data: user, isLoading } = useQuery({
    queryKey: ["currentUser"],
    queryFn: () => base44.auth.me(),
  });

  const [preferences, setPreferences] = useState({
    formality: "neutral",
    verbosity: "balanced",
    tone: "friendly",
    voice_enabled: false, // Initialize voice_enabled
  });

  useEffect(() => {
    if (user) {
      setPreferences({
        formality: user.formality || "neutral",
        verbosity: user.verbosity || "balanced",
        tone: user.tone || "friendly",
        voice_enabled: user.voice_enabled || false,
      });
    }
  }, [user]);

  const updatePreferencesMutation = useMutation({
    mutationFn: (data) => base44.auth.updateMe(data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["currentUser"] });
      setSaved(true);
      setTimeout(() => setSaved(false), 3000);
    },
  });

  const handleSave = async () => {
    await updatePreferencesMutation.mutateAsync(preferences);
  };

  const getDescription = () => {
    const descriptions = {
      formality: {
        formal: "J.A.R.V.I.S will use professional, structured language",
        casual: "J.A.R.V.I.S will use relaxed, conversational language",
        neutral: "J.A.R.V.I.S will use balanced, clear language",
      },
      verbosity: {
        concise: "J.A.R.V.I.S will provide brief, to-the-point responses",
        balanced: "J.A.R.V.I.S will provide moderately detailed responses",
        detailed: "J.A.R.V.I.S will provide comprehensive, thorough responses",
      },
      tone: {
        friendly: "J.A.R.V.I.S will be warm and approachable",
        professional: "J.A.R.V.I.S will be business-like and focused",
        enthusiastic: "J.A.R.V.I.S will be energetic and encouraging",
        empathetic: "J.A.R.V.I.S will be understanding and supportive",
      },
    };

    return {
      formality: descriptions.formality[preferences.formality],
      verbosity: descriptions.verbosity[preferences.verbosity],
      tone: descriptions.tone[preferences.tone],
    };
  };

  const currentDescription = getDescription();

  if (isLoading) {
    return (
      <div className="min-h-full flex items-center justify-center bg-gradient-to-br from-gray-900 via-slate-900 to-black">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-cyan-500" />
      </div>
    );
  }

  return (
    <div className="min-h-full p-6 bg-gradient-to-br from-gray-900 via-slate-900 to-black">
      <div className="max-w-4xl mx-auto">
        <div className="mb-8">
          <h1 className="text-3xl font-bold text-white flex items-center gap-2">
            <SettingsIcon className="w-8 h-8 text-cyan-400" />
            J.A.R.V.I.S Settings
          </h1>
          <p className="text-gray-400 mt-1">
            Customize how J.A.R.V.I.S communicates with you
          </p>
        </div>

        {saved && (
          <Alert className="mb-6 bg-cyan-500/10 border-cyan-500/30">
            <Sparkles className="w-4 h-4 text-cyan-400" />
            <AlertDescription className="text-cyan-400">
              Settings saved successfully! J.A.R.V.I.S will now use your preferences.
            </AlertDescription>
          </Alert>
        )}

        <div className="grid gap-6">
          <Card className="border-gray-700 bg-gray-800/50 backdrop-blur-sm shadow-lg">
            <CardHeader className="border-b border-gray-700">
              <CardTitle className="text-xl text-white">Response Style</CardTitle>
              <CardDescription className="text-gray-400">
                Configure how J.A.R.V.I.S responds to your queries
              </CardDescription>
            </CardHeader>
            <CardContent className="pt-6 space-y-6">
              <div className="space-y-3">
                <div className="flex justify-between items-start">
                  <div>
                    <Label htmlFor="formality" className="text-base font-semibold text-white">
                      Formality Level
                    </Label>
                    <p className="text-sm text-gray-400 mt-1">
                      {currentDescription.formality}
                    </p>
                  </div>
                </div>
                <Select
                  value={preferences.formality}
                  onValueChange={(value) =>
                    setPreferences({ ...preferences, formality: value })
                  }
                >
                  <SelectTrigger id="formality" className="w-full bg-gray-900 border-gray-700 text-white">
                    <SelectValue />
                  </SelectTrigger>
                  <SelectContent className="bg-gray-900 border-gray-700">
                    <SelectItem value="formal" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Formal</span>
                        <span className="text-xs text-gray-400">Professional & structured</span>
                      </div>
                    </SelectItem>
                    <SelectItem value="neutral" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Neutral</span>
                        <span className="text-xs text-gray-400">Balanced & clear</span>
                      </div>
                    </SelectItem>
                    <SelectItem value="casual" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Casual</span>
                        <span className="text-xs text-gray-400">Relaxed & conversational</span>
                      </div>
                    </SelectItem>
                  </SelectContent>
                </Select>
              </div>

              <div className="space-y-3">
                <div className="flex justify-between items-start">
                  <div>
                    <Label htmlFor="verbosity" className="text-base font-semibold text-white">
                      Response Length
                    </Label>
                    <p className="text-sm text-gray-400 mt-1">
                      {currentDescription.verbosity}
                    </p>
                  </div>
                </div>
                <Select
                  value={preferences.verbosity}
                  onValueChange={(value) =>
                    setPreferences({ ...preferences, verbosity: value })
                  }
                >
                  <SelectTrigger id="verbosity" className="w-full bg-gray-900 border-gray-700 text-white">
                    <SelectValue />
                  </SelectTrigger>
                  <SelectContent className="bg-gray-900 border-gray-700">
                    <SelectItem value="concise" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Concise</span>
                        <span className="text-xs text-gray-400">Brief & to-the-point</span>
                      </div>
                    </SelectItem>
                    <SelectItem value="balanced" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Balanced</span>
                        <span className="text-xs text-gray-400">Moderately detailed</span>
                      </div>
                    </SelectItem>
                    <SelectItem value="detailed" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Detailed</span>
                        <span className="text-xs text-gray-400">Comprehensive & thorough</span>
                      </div>
                    </SelectItem>
                  </SelectContent>
                </Select>
              </div>

              <div className="space-y-3">
                <div className="flex justify-between items-start">
                  <div>
                    <Label htmlFor="tone" className="text-base font-semibold text-white">
                      Communication Tone
                    </Label>
                    <p className="text-sm text-gray-400 mt-1">
                      {currentDescription.tone}
                    </p>
                  </div>
                </div>
                <Select
                  value={preferences.tone}
                  onValueChange={(value) =>
                    setPreferences({ ...preferences, tone: value })
                  }
                >
                  <SelectTrigger id="tone" className="w-full bg-gray-900 border-gray-700 text-white">
                    <SelectValue />
                  </SelectTrigger>
                  <SelectContent className="bg-gray-900 border-gray-700">
                    <SelectItem value="friendly" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Friendly</span>
                        <span className="text-xs text-gray-400">Warm & approachable</span>
                      </div>
                    </SelectItem>
                    <SelectItem value="professional" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Professional</span>
                        <span className="text-xs text-gray-400">Business-like & focused</span>
                      </div>
                    </SelectItem>
                    <SelectItem value="enthusiastic" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Enthusiastic</span>
                        <span className="text-xs text-gray-400">Energetic & encouraging</span>
                      </div>
                    </SelectItem>
                    <SelectItem value="empathetic" className="text-white">
                      <div className="flex flex-col items-start">
                        <span className="font-medium">Empathetic</span>
                        <span className="text-xs text-gray-400">Understanding & supportive</span>
                      </div>
                    </SelectItem>
                  </SelectContent>
                </Select>
              </div>
              
              <div className="space-y-3 pt-4 border-t border-gray-700">
                <div className="flex justify-between items-center">
                  <div>
                    <Label className="text-base font-semibold text-white">Voice Output</Label>
                    <p className="text-sm text-gray-400 mt-1">
                      Enable J.A.R.V.I.S to speak responses aloud
                    </p>
                  </div>
                  <Button
                    type="button"
                    variant="outline"
                    onClick={() =>
                      setPreferences({ ...preferences, voice_enabled: !preferences.voice_enabled })
                    }
                    className={`${
                      preferences.voice_enabled
                        ? "bg-cyan-500/20 border-cyan-500/50 text-cyan-400"
                        : "bg-gray-900 border-gray-700 text-gray-400"
                    } hover:bg-gray-700/50 transition-colors`}
                  >
                    {preferences.voice_enabled ? "Enabled" : "Disabled"}
                  </Button>
                </div>
              </div>
            </CardContent>
          </Card>

          <Card className="border-cyan-500/30 bg-gradient-to-br from-cyan-500/10 to-blue-500/10 backdrop-blur-sm">
            <CardContent className="pt-6">
              <div className="flex items-start gap-4">
                <div className="w-12 h-12 rounded-xl bg-gradient-to-br from-cyan-500 via-blue-500 to-purple-600 flex items-center justify-center flex-shrink-0 shadow-lg shadow-cyan-500/50">
                  <Sparkles className="w-6 h-6 text-white" />
                </div>
                <div className="flex-1">
                  <h3 className="font-semibold text-white mb-1">Preview Your Settings</h3>
                  <p className="text-sm text-gray-300">
                    With your current settings, J.A.R.V.I.S will communicate in a{" "}
                    <span className="font-semibold text-cyan-400">{preferences.formality}</span> manner,
                    providing <span className="font-semibold text-cyan-400">{preferences.verbosity}</span>{" "}
                    responses with a <span className="font-semibold text-cyan-400">{preferences.tone}</span>{" "}
                    tone. Voice output is currently{" "}
                    <span className="font-semibold text-cyan-400">
                      {preferences.voice_enabled ? "enabled" : "disabled"}
                    </span>.
                  </p>
                </div>
              </div>
            </CardContent>
          </Card>

          <Button
            onClick={handleSave}
            disabled={updatePreferencesMutation.isPending}
            className="w-full bg-gradient-to-r from-cyan-500 via-blue-500 to-purple-600 hover:from-cyan-600 hover:via-blue-600 hover:to-purple-700 text-white rounded-xl shadow-lg shadow-cyan-500/30 h-12 text-lg"
          >
            {updatePreferencesMutation.isPending ? (
              <>
                <div className="animate-spin rounded-full h-5 w-5 border-b-2 border-white mr-2" />
                Saving...
              </>
            ) : (
              <>
                <Save className="w-5 h-5 mr-2" />
                Save Preferences
              </>
            )}
          </Button>
        </div>
      </div>
    </div>
  );
}
