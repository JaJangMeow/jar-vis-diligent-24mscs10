
import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Label } from "@/components/ui/label";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/components/ui/select";
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
  DialogFooter,
} from "@/components/ui/dialog";
import { Plus, Database, Search, X } from "lucide-react";
import { Badge } from "@/components/ui/badge";
import KnowledgeItem from "../components/knowledge/KnowledgeItem";
import FileUploader from "../components/knowledge/FileUploader";
import KnowledgeExporter from "../components/knowledge/KnowledgeExporter";

const CATEGORIES = ["personal", "work", "reference", "notes", "documents", "other"];

export default function KnowledgeBase() {
  const [showDialog, setShowDialog] = useState(false);
  const [selectedItem, setSelectedItem] = useState(null);
  const [searchQuery, setSearchQuery] = useState("");
  const [formData, setFormData] = useState({
    title: "",
    content: "",
    category: "notes",
    tags: [],
  });
  const [tagInput, setTagInput] = useState("");

  const queryClient = useQueryClient();

  const { data: knowledgeBase = [], isLoading } = useQuery({
    queryKey: ["knowledge"],
    queryFn: async () => {
      const user = await base44.auth.me();
      return base44.entities.KnowledgeBase.filter({ created_by: user.email }, "-created_date");
    },
  });

  const createKnowledgeMutation = useMutation({
    mutationFn: (data) => base44.entities.KnowledgeBase.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["knowledge"] });
      resetForm();
      setShowDialog(false);
    },
  });

  const updateKnowledgeMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.KnowledgeBase.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["knowledge"] });
      resetForm();
      setShowDialog(false);
      setSelectedItem(null);
    },
  });

  const deleteKnowledgeMutation = useMutation({
    mutationFn: (id) => base44.entities.KnowledgeBase.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["knowledge"] });
      setSelectedItem(null);
    },
  });

  const handleFileUploadSuccess = () => {
    queryClient.invalidateQueries({ queryKey: ["knowledge"] });
  };

  const resetForm = () => {
    setFormData({
      title: "",
      content: "",
      category: "notes",
      tags: [],
    });
    setTagInput("");
  };

  const handleOpenDialog = (item = null) => {
    if (item) {
      setFormData({
        title: item.title,
        content: item.content,
        category: item.category,
        tags: item.tags || [],
      });
      setSelectedItem(item);
    } else {
      resetForm();
      setSelectedItem(null);
    }
    setShowDialog(true);
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    if (selectedItem) {
      await updateKnowledgeMutation.mutateAsync({
        id: selectedItem.id,
        data: formData,
      });
    } else {
      await createKnowledgeMutation.mutateAsync(formData);
    }
  };

  const handleAddTag = () => {
    if (tagInput.trim() && !formData.tags.includes(tagInput.trim())) {
      setFormData({
        ...formData,
        tags: [...formData.tags, tagInput.trim()],
      });
      setTagInput("");
    }
  };

  const handleRemoveTag = (tagToRemove) => {
    setFormData({
      ...formData,
      tags: formData.tags.filter((tag) => tag !== tagToRemove),
    });
  };

  const filteredKnowledge = knowledgeBase.filter(
    (item) =>
      item.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
      item.content.toLowerCase().includes(searchQuery.toLowerCase()) ||
      item.tags?.some((tag) => tag.toLowerCase().includes(searchQuery.toLowerCase()))
  );

  return (
    <div className="min-h-full p-6 bg-gradient-to-br from-black via-gray-950 to-red-950">
      <div className="max-w-7xl mx-auto">
        <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
          <div>
            <h1 className="text-3xl font-bold text-white flex items-center gap-2">
              <Database className="w-8 h-8 text-red-400" />
              Knowledge Base
            </h1>
            <p className="text-gray-400 mt-1">
              Store and manage information for J.A.R.V.I.S
            </p>
          </div>
          <div className="flex gap-2">
            <KnowledgeExporter knowledgeBase={knowledgeBase} />
            <Button
              onClick={() => handleOpenDialog()}
              className="bg-gradient-to-r from-red-600 via-red-700 to-red-900 hover:from-red-700 hover:via-red-800 hover:to-black rounded-xl shadow-lg shadow-red-500/30"
            >
              <Plus className="w-4 h-4 mr-2" />
              Add Knowledge
            </Button>
          </div>
        </div>

        <div className="mb-6 space-y-4">
          <FileUploader onSuccess={handleFileUploadSuccess} />
          
          <div className="relative">
            <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-500" />
            <Input
              placeholder="Search knowledge base..."
              value={searchQuery}
              onChange={(e) => setSearchQuery(e.target.value)}
              className="pl-10 rounded-xl border-red-900/30 bg-gray-900 text-white placeholder:text-gray-500 shadow-sm"
            />
          </div>
        </div>

        {isLoading ? (
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {[1, 2, 3].map((i) => (
              <div key={i} className="h-48 bg-gray-800 animate-pulse rounded-xl" />
            ))}
          </div>
        ) : filteredKnowledge.length === 0 ? (
          <div className="flex flex-col items-center justify-center py-20 text-center">
            <div className="w-20 h-20 rounded-full bg-gradient-to-br from-red-500/20 via-red-500/20 to-red-600/20 flex items-center justify-center mb-6 border border-red-500/30">
              <Database className="w-10 h-10 text-red-400" />
            </div>
            <h2 className="text-2xl font-bold text-white mb-2">
              {searchQuery ? "No results found" : "No knowledge entries yet"}
            </h2>
            <p className="text-gray-400 max-w-md mb-6">
              {searchQuery
                ? "Try adjusting your search"
                : "Start building your knowledge base by adding information the AI can reference"}
            </p>
            {!searchQuery && (
              <Button
                onClick={() => handleOpenDialog()}
                className="bg-gradient-to-r from-red-600 via-red-700 to-red-900 hover:from-red-700 hover:via-red-800 hover:to-black rounded-xl shadow-lg shadow-red-500/30"
              >
                <Plus className="w-4 h-4 mr-2" />
                Add Your First Entry
              </Button>
            )}
          </div>
        ) : (
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {filteredKnowledge.map((item) => (
              <KnowledgeItem key={item.id} item={item} onClick={handleOpenDialog} />
            ))}
          </div>
        )}

        <Dialog open={showDialog} onOpenChange={setShowDialog}>
          <DialogContent className="max-w-2xl max-h-[90vh] overflow-y-auto bg-gray-900 border-red-900/30 text-white">
            <DialogHeader>
              <DialogTitle className="text-white">
                {selectedItem ? "Edit Knowledge Entry" : "Add New Knowledge"}
              </DialogTitle>
            </DialogHeader>
            <form onSubmit={handleSubmit} className="space-y-6">
              <div>
                <Label htmlFor="title" className="text-white">Title</Label>
                <Input
                  id="title"
                  value={formData.title}
                  onChange={(e) => setFormData({ ...formData, title: e.target.value })}
                  placeholder="Enter a descriptive title"
                  required
                  className="mt-2 bg-gray-900 border-gray-700 text-white placeholder:text-gray-500"
                />
              </div>

              <div>
                <Label htmlFor="content" className="text-white">Content</Label>
                <Textarea
                  id="content"
                  value={formData.content}
                  onChange={(e) => setFormData({ ...formData, content: e.target.value })}
                  placeholder="Enter the knowledge or information..."
                  required
                  className="mt-2 min-h-[200px] bg-gray-900 border-gray-700 text-white placeholder:text-gray-500"
                />
              </div>

              <div>
                <Label htmlFor="category" className="text-white">Category</Label>
                <Select
                  value={formData.category}
                  onValueChange={(value) => setFormData({ ...formData, category: value })}
                >
                  <SelectTrigger className="mt-2 bg-gray-900 border-gray-700 text-white">
                    <SelectValue />
                  </SelectTrigger>
                  <SelectContent className="bg-gray-900 border-gray-700">
                    {CATEGORIES.map((cat) => (
                      <SelectItem key={cat} value={cat} className="text-white">
                        {cat.charAt(0).toUpperCase() + cat.slice(1)}
                      </SelectItem>
                    ))}
                  </SelectContent>
                </Select>
              </div>

              <div>
                <Label htmlFor="tags" className="text-white">Tags</Label>
                <div className="flex gap-2 mt-2">
                  <Input
                    id="tags"
                    value={tagInput}
                    onChange={(e) => setTagInput(e.target.value)}
                    onKeyPress={(e) => {
                      if (e.key === "Enter") {
                        e.preventDefault();
                        handleAddTag();
                      }
                    }}
                    placeholder="Add tags..."
                    className="bg-gray-900 border-gray-700 text-white placeholder:text-gray-500"
                  />
                  <Button type="button" onClick={handleAddTag} variant="outline" className="border-gray-700 text-white hover:bg-gray-700">
                    Add
                  </Button>
                </div>
                {formData.tags.length > 0 && (
                  <div className="flex flex-wrap gap-2 mt-3">
                    {formData.tags.map((tag) => (
                      <Badge
                        key={tag}
                        variant="secondary"
                        className="flex items-center gap-1 px-3 py-1 bg-red-500/20 text-red-400 border border-red-500/30"
                      >
                        #{tag}
                        <X
                          className="w-3 h-3 cursor-pointer"
                          onClick={() => handleRemoveTag(tag)}
                        />
                      </Badge>
                    ))}
                  </div>
                )}
              </div>

              <DialogFooter className="gap-2">
                {selectedItem && (
                  <Button
                    type="button"
                    variant="destructive"
                    onClick={() => {
                      if (confirm("Are you sure you want to delete this entry?")) {
                        deleteKnowledgeMutation.mutate(selectedItem.id);
                        setShowDialog(false);
                      }
                    }}
                  >
                    Delete
                  </Button>
                )}
                <Button
                  type="button"
                  variant="outline"
                  onClick={() => {
                    setShowDialog(false);
                    resetForm();
                  }}
                  className="border-gray-700 text-white hover:bg-gray-700"
                >
                  Cancel
                </Button>
                <Button
                  type="submit"
                  className="bg-gradient-to-r from-red-600 via-red-700 to-red-900 hover:from-red-700 hover:via-red-800 hover:to-black"
                >
                  {selectedItem ? "Update" : "Create"}
                </Button>
              </DialogFooter>
            </form>
          </DialogContent>
        </Dialog>
      </div>
    </div>
  );
}
